<br>
<%= form_for @project, html: { multipart: true } do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :subtitle %><br>
    <%= f.text_field :subtitle %>
  </div>

  <div class="field">
    <%= f.label :slug %><br>
    <%= f.text_field :slug %>
  </div>

  <div class="field">
    <%= f.label :categories %><br>
    <%= f.text_field :categories %>
  </div>

  <div class="field">
    <%= f.label :date %><br>
    <%= f.text_field :date %>
  </div>

  <div class="field">
    <%= f.label :skills %><br>
    <%= f.text_field :skills %>
  </div>

  <div class="field">
    <%= f.label :link %><br>
    <%= f.text_field :link %>
  </div>

  <div class="field">
    <%= f.label :overview %><br>
    <%= f.text_area :overview %>
  </div>

  <span class="picture">
    <div class="field">
      <%= f.label :index_pic %><br>
      <%= f.file_field :index_pic, accept: 'image/jpeg,image/gif,image/png' %>
    </div>

    <div class="field">
      <%= f.label :profile_pics %><br>
      <%= f.file_field :profile_pics, multiple: true, accept: 'image/jpeg,image/gif,image/png' %>
    </div>
  </span>

  <div class="action">
    <%= f.submit yield(:button_text) %>
  </div>

<% end %>

<script type="text/javascript">
  $('#project_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>
