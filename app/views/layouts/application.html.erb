<!DOCTYPE html>
<html>
  <head>
    <!-- ==============================================
        Meta Tags & Title
        =============================================== -->
    <title>
      <% if yield(:title).present? %>
          <%= yield(:title) %>
      <% else %>
          Leighann Kinter | Software Development | Data Visualization
      <% end %>
    </title>

    <%= csrf_meta_tags %>
    <meta charset= "UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <% if yield(:meta_description).present? %>
      <meta name="description" content="<%= yield(:meta_description) %>" />
    <% else %>
      <meta name="description" content="Leighann Kinter's Portfolio - Data Visualization, Design and Software Development in Ruby on Rails" />
    <% end %>

    <% if yield(:meta_keywords).present? %>
      <meta name="keywords" content="<%= yield(:meta_keywords) %>" />
    <% else %>
      <meta name="keywords" content="leighann kinter, data visualization, ruby on rails, hand lettering, software development, design" />
    <% end %>
    <!-- ==============================================
        Stylesheets
        =============================================== -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,700' rel='stylesheet' type='text/css'>
    <link href="https://fonts.googleapis.com/css?family=Great+Vibes" rel="stylesheet" type='text/css'>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" type="text/css">

    <!-- ==============================================
        Javascript
        =============================================== -->
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.11.1/jquery.validate.min.js"></script>
    <script type="text/javascript" src="https://d3js.org/d3.v3.min.js"></script>

    <%= favicon_link_tag 'favicons/apple-touch-icon.png', rel: 'apple-touch-icon', sizes: "180x180", type: "image/png" %>
    <%= favicon_link_tag 'favicons/favicon-32x32.png', rel: "icon", type: "image/png", sizes:"32x32" %>
    <%= favicon_link_tag 'favicons/favicon-16x16.png', rel: "icon", type: "image/png", sizes:"16x16" %>
    <%= favicon_link_tag 'favicons/manifest.json', rel: "manifest" %>
    <%= favicon_link_tag 'favicons/safari-pinned-tab.svg', rel: "mask-icon", color: "#5bbad5" %>

    <meta name="theme-color" content="#ffffff">

    <% if Rails.env.production? %>
        <script type="text/javascript">
          (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
          (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
          m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
          })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
          ga('create', 'UA-99049475-1', 'auto');
        </script>
    <% end %>

  </head>

  <body>

    <%= yield %>

  </body>
</html>
